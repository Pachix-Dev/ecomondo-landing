---
import { ContactForm } from '../components/ContactForm'
import Results from '../components/Results.astro'
import Experiencies from '../components/Experiencies.astro'
import Layout from '../layouts/Layout.astro'
import Hero from '../components/Hero.astro'
import EcomondoIntro from '../components/EcomondoIntro.astro'
import ContactSection from '../components/ContactSection.astro'
import WhyExhibit from '../components/WhyExhibit.astro'
import Footer from '../components/Footer.astro'
---

<Layout title='Ecomondo Mexico'>
  <main>
    <!-- KEYVISUAL -->
    <Hero />
    <ContactSection />
    <EcomondoIntro />
    <WhyExhibit />
    <Results />
    <Experiencies />
  </main>
  <Footer />

  <style>
    .whatssap-button {
      cursor: pointer;
      position: fixed;
      bottom: 20px;
      right: 20px;
      border-radius: 50%;
      background-color: #25d366;
      z-index: 10;
      transition: 0.3s ease-in-out;
    }

    .whatssap-button:hover {
      background-color: #128c7e;
      transform: scale(1.1);
    }

    .whatssap-button svg {
      fill: white;
      width: 60px;
      padding: 12px;
    }
  </style>
</Layout>
